<%= form_for @letter do |f| %>

  <%= f.label :body %>
  <%= f.text_area :body %>

  <%= f.label :address_line1 %>
  <%= f.text_field :address_line1 %>

  <%= f.label :address_line2 %>
  <%= f.text_field :address_line2 %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip %>
  <%= f.text_field :zip %>

  <%= f.label :country %>
  <%= f.text_field :country %>

  <%= f.submit "Next" %>
<% end %>